<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackFundo"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/cbAcao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/acao"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbAnimacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:text="@string/anima_o"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/cbAcao"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbCrime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/crime"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/cbComedia"
        app:layout_constraintTop_toBottomOf="@+id/cbAnimacao" />

    <CheckBox
        android:id="@+id/cbSciFi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:text="@string/sci_fi"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/cbFantasia"
        app:layout_constraintTop_toBottomOf="@+id/cbCrime" />

    <CheckBox
        android:id="@+id/cbDrama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:text="@string/drama"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/cbCrime"
        app:layout_constraintTop_toBottomOf="@+id/cbAventura" />

    <CheckBox
        android:id="@+id/cbFantasia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/fantasia"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbComedia" />

    <CheckBox
        android:id="@+id/cbComedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:text="@string/comedia"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbAcao" />

    <CheckBox
        android:id="@+id/cbAventura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/aventura"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/cbAnimacao"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbTerror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:text="@string/terror"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/cbSciFi"
        app:layout_constraintTop_toBottomOf="@id/cbDrama" />

</androidx.constraintlayout.widget.ConstraintLayout>